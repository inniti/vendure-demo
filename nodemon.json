{
  "watch": ["src/**/*.ts"],
  "ext": "ts,json",
  "ignore": [
    "src/migrations/*.ts",
    "src/**/*.spec.ts",
    ".git",
    "node_modules/**/node_modules"
  ],
  "env": {
    "NODE_ENV": "development",
    "STOREFRONT_URL": "http://localhost:4321",
    "PUBLIC_URL": "http://localhost:3000"
  },
  "restartable": "rs",
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "delay": 2500
}
